{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WeatherLight",
  "version": "1.0.0",
  "identifier": "com.jon.weatherlight",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "WeatherLight",
        "url": "settings.html",
        "width": 800,
        "height": 850,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}